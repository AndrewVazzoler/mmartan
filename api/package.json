{
  "name": "mmartan-api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "node:ts": "ts-node -r tsconfig-paths/register ./src",
    "seeder": "ts-node -r tsconfig-paths/register ./src/Infra/Database/seeder/productSeeder.ts",
    "tsc": "tsc",
    "build": "yarn clean && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "dev:start": "npm-run-all build start",
    "dev": "NODE_ENV=production nodemon --watch src -e ts --exec yarn node:ts",
    "start": "node ."
  },
  "dependencies": {
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "helmet": "^3.15.0",
    "joi": "^14.3.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.5",
    "mongoose-paginate-v2": "1.0.13",
    "node-exceptions": "^4.0.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "ts-node": "^7.0.1",
    "winston": "^3.1.0",
    "yarn-run-all": "^3.1.1"
  },
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/debug": "^0.0.31",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.4",
    "@types/helmet": "^0.0.42",
    "@types/joi": "^14.0.1",
    "@types/lodash": "^4.14.120",
    "@types/mongoose": "^5.3.8",
    "@types/mongoose-paginate-v2": "^1.0.1",
    "@types/node": "^10.12.18",
    "@types/shelljs": "^0.8.1",
    "@types/winston": "^2.4.4",
    "tsconfig-paths": "^3.7.0",
    "tscpaths": "^0.0.6",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  }
}
